<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".plugins.pump.medtronicESP.activities.MedtronicHistoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingRight="5dp"
        android:text="@string/medtronicESP_command_history"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/medtronicESP_history_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/medtronic_historybuttons" />

    <LinearLayout
        android:id="@+id/medtronic_historybuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/medtronic_historyreload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/medtronicESP_reloadhistory" />
    </LinearLayout>

</RelativeLayout>